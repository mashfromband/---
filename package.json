{
  "name": "realize_learning_backend",
  "version": "0.0.1",
  "description": "RealizeLearning backend server",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dst && tsc -p .",
    "start_auth_server": "cross-env PINO_LOG_LEVEL=debug NODE_ENV=local_develop node dst/auth_server/index.js | pino-pretty",
    "start_api_server": "cross-env PINO_LOG_LEVEL=debug NODE_ENV=local_develop node dst/api_server/index.js | pino-pretty",
    "start_admin_api_server": "cross-env PINO_LOG_LEVEL=debug NODE_ENV=local_develop node dst/admin_api_server/index.js | pino-pretty",
    "typeorm": "npx typeorm-ts-node-commonjs",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate src/migration/${npm_config_name} -d src/data-source.ts",
    "openapi-typescript:auth": "openapi-typescript spec/api/auth.yaml -o src/types/api/auth.ts",
    "openapi-typescript:contents": "openapi-typescript spec/api/contents.yaml -o src/types/api/contents.ts",
    "openapi-typescript:management": "openapi-typescript spec/api/management.yaml -o src/types/api/management.ts",
    "update-masterdata": "cross-env NODE_ENV=local_develop node dst/tools/import_db/index.js"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.4",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.10",
    "nodemon": "^3.1.4",
    "openapi-typescript": "^7.0.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.679.0",
    "base64url": "^3.0.1",
    "bcrypt": "^5.1.1",
    "config": "^3.3.12",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-openapi-validator": "^5.2.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "fp-ts": "^2.16.9",
    "helmet": "^7.1.0",
    "io-ts": "^2.2.21",
    "ioredis": "^5.4.1",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mysql2": "^3.10.2",
    "nanoid": "^3.3.7",
    "pino-http": "^10.2.0",
    "pino-pretty": "^11.2.1",
    "typeorm": "^0.3.20"
  }
}
